{
  "manifest_version": 2,
  "name": "mTranslator",
  "description": "Translate the selected text when you press Ctrl + Q.",
  "homepage_url": "https://github.com/thiagommedeiros/mTranslator",
  "version": "1.0.0",
  "author": "Thiago M. Medeiros",
  "permissions": ["tabs", "http://*/*"],
  "content_scripts" : [{
    "matches" : ["http://*/*", "https://*/*"],
    "js" : ["main.js"]
  }]
}
